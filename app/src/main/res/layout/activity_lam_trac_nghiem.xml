<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    tools:context=".view.tracnghiemchude.LamTracNghiemActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/xanh_nuoc_bien">
        <TextView
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:text="Hóa Trị"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView

                android:text="06/50"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView
            android:layout_weight="3"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="46:02"/>
        <TextView
            android:layout_weight="2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_gravity="center"
            android:id="@+id/btn_ket_thuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết thúc"/>

    </LinearLayout>
    <TextView
        android:textSize="22sp"
        android:padding="8dp"
        android:textColor="@color/xanh_nuoc_bien"
        android:layout_margin="8dp"
        android:text="Khi xác định hóa trị, hóa trị của nguyên tố nào được lấy ra làm đơn vị"
        android:background="@drawable/custom_backgound_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="22sp"
        android:padding="8dp"
        android:textColor="@color/xanh_nuoc_bien"
        android:layout_margin="8dp"
        android:text="A. Oxi\n\nB. Nitơ\n\nC. Hidro\n\nD. Natri"
        android:background="@drawable/custom_backgound_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"/>

    <RadioGroup
        android:id="@+id/radGroup"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <RadioButton
            android:id="@+id/radA"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:checked="false"
            android:background="@drawable/custom_radio_button"
            android:text="A"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radB"
            android:padding="8dp"
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@drawable/custom_radio_button"
            android:checked="false"
            android:text="B"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radC"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_weight="1"
            android:background="@drawable/custom_radio_button"
            android:checked="false"
            android:gravity="center_vertical"
            android:text="C"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radD"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_radio_button"
            android:checked="false"
            android:layout_marginVertical="4dp"
            android:text="D"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>
</LinearLayout>