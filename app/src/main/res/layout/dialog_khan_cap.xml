<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:background="@drawable/style_bg_dialog_khan_cap"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="130dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="SDT tư vấn: "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/holo_blue_14"
                android:text="0357921129"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/holo_orange_14"
            android:text="Hãy liên hệ ngay để nhận được lời khuyên chân thành dành cho bạn"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/white"
        android:id="@+id/btn_dialog_khan_cap_next"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:background="@drawable/style_radius_4"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:text="Tiếp tục"/>
</LinearLayout>