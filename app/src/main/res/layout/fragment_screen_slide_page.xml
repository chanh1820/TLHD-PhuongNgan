<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvQuestion"
        android:textSize="22sp"
        android:padding="8dp"
        android:textColor="@color/xanh_nuoc_bien"
        android:layout_margin="8dp"
        android:text="Khi xác định hóa trị, hóa trị của nguyên tố nào được lấy ra làm đơn vị"
        android:background="@drawable/custom_backgound_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginVertical="16dp" />
    <RadioGroup
        android:id="@+id/radGroup"
        android:background="@drawable/custom_backgound_item_2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <RadioButton
            android:id="@+id/radA"
            android:padding="8dp"
            android:textColor="@color/xanh_nuoc_bien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:checked="false"
            android:background="@drawable/custom_radio_button"

            android:text="Trả lời 1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radB"
            android:padding="8dp"
            android:background="@drawable/custom_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:checked="false"
            android:text="Trả lời 2"
            android:textColor="@color/xanh_nuoc_bien"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radC"
            android:padding="8dp"
            android:background="@drawable/custom_radio_button"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:checked="false"
            android:gravity="center_vertical"
            android:text="Trả lời 3"
            android:textColor="@color/xanh_nuoc_bien"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radD"
            android:padding="8dp"
            android:background="@drawable/custom_radio_button"

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginVertical="4dp"
            android:text="Trả lời 4"
            android:textColor="@color/xanh_nuoc_bien"
            android:textSize="20sp"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/radE"
            android:padding="8dp"
            android:background="@drawable/custom_radio_button"

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginVertical="4dp"
            android:text="Trả lời 5"
            android:textColor="@color/xanh_nuoc_bien"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

</LinearLayout>