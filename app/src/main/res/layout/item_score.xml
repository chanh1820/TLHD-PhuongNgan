<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/style_radius_3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_score_index"

            android:layout_width="match_parent"
            android:text="1"
            android:paddingHorizontal="4dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="28sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">


            <TextView
                android:id="@+id/tv_item_score_student_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Minh Chánh | 6A1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/tv_item_score_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22:56 05/09/2023 "
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_item_score_score_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08/10 | 8 điểm"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>