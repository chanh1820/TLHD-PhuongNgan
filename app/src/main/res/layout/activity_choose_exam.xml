<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    tools:context=".view.tracnghiemchude.ChooseExamActivity">
    <LinearLayout

        android:layout_marginHorizontal="4dp"
        android:background="@drawable/custom_backgound_item_1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:text="Đề 1: Hóa trị"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textColor="@color/xanh_nuoc_bien"
                android:text="Thời gian: 30 phút"/>
            <TextView
                android:layout_width="4dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/xanh_nuoc_bien" />
            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/xanh_nuoc_bien"
                android:text=" Câu hỏi: 50"/>
        </LinearLayout>
        <Button
            android:background="@drawable/custom_button_1"
            android:layout_margin="2dp"
            android:text="Bắt đầu"
            android:id="@+id/btn_item_exam"
            android:textSize="22dp"
            android:paddingHorizontal="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/custom_backgound_item_1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:text="Đề 2: Nguyên tố hóa học"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textColor="@color/xanh_nuoc_bien"
                android:text="Thời gian: 15 phút"/>
            <TextView
                android:layout_width="4dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/xanh_nuoc_bien" />
            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/xanh_nuoc_bien"
                android:text=" Câu hỏi: 30"/>
        </LinearLayout>
        <Button
            android:background="@drawable/custom_button_1"
            android:layout_margin="2dp"
            android:text="Bắt đầu"
            android:textSize="22dp"
            android:paddingHorizontal="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/custom_backgound_item_1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:text="Đề 3: Tốc độ chuyển động"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textColor="@color/xanh_nuoc_bien"
                android:text="Thời gian: 30 phút"/>
            <TextView
                android:layout_width="4dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/xanh_nuoc_bien" />
            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/xanh_nuoc_bien"
                android:text=" Câu hỏi: 30"/>
        </LinearLayout>
        <Button
            android:background="@drawable/custom_button_1"
            android:layout_margin="2dp"
            android:text="Bắt đầu"
            android:textSize="22dp"
            android:paddingHorizontal="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/custom_backgound_item_1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:text="Đề 4: Từ trường"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textColor="@color/xanh_nuoc_bien"
                android:text="Thời gian: 30 phút"/>
            <TextView
                android:layout_width="4dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/xanh_nuoc_bien" />
            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/xanh_nuoc_bien"
                android:text=" Câu hỏi: 40"/>
        </LinearLayout>
        <Button
            android:background="@drawable/custom_button_1"
            android:layout_margin="2dp"
            android:text="Bắt đầu"
            android:textSize="22dp"
            android:paddingHorizontal="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/custom_backgound_item_1"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="Đề 5: Quang hợp ở thực vật"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="Thời gian: 30 phút"
                android:textColor="@color/xanh_nuoc_bien"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:background="@color/xanh_nuoc_bien" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:text=" Câu hỏi: 50"
                android:textColor="@color/xanh_nuoc_bien"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/custom_button_1"
            android:paddingHorizontal="32dp"
            android:text="Bắt đầu"
            android:textSize="22dp" />
    </LinearLayout>
</LinearLayout>